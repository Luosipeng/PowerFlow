    {
        "version": "0.2.0",
        "configurations": [
            {
                "type": "julia",
                "request": "launch",
                "name": "Julia Debug",
                "program": "${file}",
                "stopOnEntry": false,
                "cwd": "${workspaceFolder}",
                "juliaEnv": "${command:activeJuliaEnvironment}",
                // 添加以下配置来优化调试体验
                "debugOptions": [
                    "DebugStdLib"  // 如果不需要调试标准库，可以移除此项
                ]
            }
        ]
      }